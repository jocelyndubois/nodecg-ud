{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "time": {
      "type": "string",
      "default": "00:00:00",
      "pattern": "^([0-9]{2}:[0-9]{2}:[0-9]{2})*$"
    },
    "state": {
      "type": "string",
      "default": "stopped",
      "enum": [
        "stopped",
        "running",
        "paused",
        "finished"
      ]
    },
    "milliseconds": {
      "type": "number",
      "default": 0
    },
    "timestamp": {
      "type": "number",
      "default": 0
    },
    "teamFinishTimes": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "time": {
            "type": "string",
            "pattern": "^([0-9]{2}:[0-9]{2}:[0-9]{2})*$"
          },
          "state": {
            "type": "string",
            "enum": [
              "forfeit",
              "completed"
            ]
          },
          "milliseconds": {
            "type": "number"
          },
          "timestamp": {
            "type": "number"
          }
        },
        "required": [
          "time",
          "state",
          "milliseconds",
          "timestamp"
        ]
      }
    }
  },
  "required": [
    "time",
    "state",
    "milliseconds",
    "timestamp",
    "teamFinishTimes"
  ]
}